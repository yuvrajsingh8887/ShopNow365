<!-- navbar.ejs -->

<style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f8f9fa;
    }
  
    nav {
      background-color: #ffc107; /* Update the background color */
      color: #ffffff;
      width: 100%;
      position: fixed;
      top: 0;
      z-index: 1000;
    }
  
    .navbar {
        width: 90%;
        background-color: #ffc107;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 10px 20px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }
  
    .menu-btn {
      display: none;
      font-size: 1.5rem;
      cursor: pointer;
    }
  
    .nav-links {
      display: flex;
      list-style: none;
      margin: 0;
      padding: 0;
    }
  
    .nav-links li {
      margin-right: 15px;
    }
  
    .nav-links a {
      text-decoration: none;
      color: #ffffff;
      font-weight: bold;
      font-size: 1rem;
      transition: color 0.3s;
    }
  
    .nav-links a:hover {
      color: #343a40;
    }
  
    .logo {
      font-size: 1.5rem;
      color: #ffffff; /* Text color for the logo */
    }
  
    .search-form {
      display: flex;
      align-items: center;
    }
  
    #search {
      padding: 10px;
      margin-right: 10px;
      border: none;
      border-radius: 25px;
      width: 50%;
    }
  
    #search:focus {
      outline: none;
      border: 2px solid #ffffff; /* Border color when focused */
    }
  
    button {
      padding: 10px 15px;
      background-color: #ffc107;
      border: none;
      border-radius: 50px;
      color: #343a40;
      cursor: pointer;
      transition: background-color 0.3s;
      margin-right: 7px;
    }
  
    button:hover {
      background-color: #ffca2c;
    }
  
    .login-btn {
      color: #ffffff;
      text-decoration: none;
      font-weight: bold;
      font-size: 1rem;
      transition: color 0.3s;
      background-color: #ffc107;
      padding: 10px 15px;
      border-radius: 50px;
      margin-right: 7px;
    }
  
    .login-btn:hover {
      color: #343a40;
      background-color: #ffca2c;
    }
  
    @media screen and (max-width: 768px) {
      .nav-links {
        display: none;
        flex-direction: column;
        position: absolute;
        top: 60px;
        left: 0;
        width: 100%;
        background-color: #ffc107;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
      }
  
      .nav-links.show {
        display: flex;
      }
  
      .menu-btn {
        display: block;
        order: 1;
        font-size: 1.5rem;
      }
  
      .logo {
        order: 3;
      }
  
      .nav-links {
        order: 2;
      }
  
      .search-form,
      .login-btn {
        order: 4;
        padding: 10px;
        margin-right: -85px;
        border: none;
        border-radius: 25px;
        width: 40%;
      }
      .login-btn {
        order: 4;
    padding: 1px;
    margin-right: -120px;
    border: none;
    border-radius: 28px;
    width: 45%;
      }
    }
  
    .card {
      background-color: #ffffff;
      border: 1px solid #dee2e6;
      border-radius: 5px;
      overflow: hidden;
      transition: box-shadow 0.3s;
      width: 300px; /* Adjust the width as needed */
    }
  
    .card:hover {
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }
  
    .wishlist-icon {
      display: block;
      font-size: 1.5rem;
      color: #343a40;
      cursor: pointer;
      text-align: right;
      padding: 5px;
    }
  
    .wishlist-icon.active {
      color: #ffc107;
    }
  
    .card img {
      width: 100%;
      height: 200px;
      object-fit: cover;
    }
  
    .card h2,
    .card p {
      padding: 10px;
      margin: 0;
    }
  
    form {
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
    }
  
    label {
      width: 100%;
      margin-bottom: 5px;
    }
  
    button {
      margin-top: -2px;
    }
  </style>
  
  <div class="navbar">
    <div class="logo">ShopNow365</div>
  
    <!-- Add the hamburger menu button -->
    <div class="menu-btn" onclick="toggleMenu();">&#9776;</div>
  
    <ul class="nav-links">
      <li><a href="/">Home</a></li>
      <li><a href="/">Products</a></li>
    </ul>
  
    
  
    <div class="login-btn">
      <a href="/login">Login</a>
    </div>
  </div>
  
  