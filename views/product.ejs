
<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="stylesheet" href="/productDetails.css">
</head>
<body>
  <nav>
    <div class="navbar">
      <div class="logo">ShopNow365
      </div>
      <ul class="nav-links">
        <li><a href="/">Home</a></li>
        <li><a href="#">Products</a></li>
        <li><a href="/new">New</a></li>
      </ul>
    </div>
  </nav>

  <div class="product-details">
    <div class="card">
      <img src="<%= product.imageUrl %>" alt="">
      <h2><%= product.name %></h2>
      <p>Price: $<%= product.price %></p>
      <p>Description: <%= product.description %></p><br><br><br>
      <button class="add-to-cart-btn">Add to Cart</button>
      <br>
      <a class="edit-btn" href="/products/<%= product.id %>/edit">Edit</a>

           <form method="POST" action="/products/<%= product.id %>?_method=DELETE">
        <button type="submit" class="delete-btn">Delete</button>
      </form>
      
    </div>

    <div class="review-section">
      <h3>Leave Your Review</h3>
      <form action="/product/<%= product.id %>/review" method="post">
        <label for="rating">Rating:</label>
        <select name="rating" id="rating">
          <option value="1">1 star</option>
          <option value="2">2 stars</option>
          <option value="3">3 stars</option>
          <option value="4">4 stars</option>
          <option value="5">5 stars</option>
        </select>
        <br>
        <label for="comment">Comment:</label>
        <textarea name="comment" id="comment" cols="30" rows="4" required></textarea>
        <br>
        <button type="submit">Submit Review</button>
      </form>

      <% if (product.reviews && product.reviews.length > 0) { %>
        <% product.reviews.forEach(review => { %>
          <div class="review">
            <div class="rating">Rating: <%= review.rating %> stars</div>
            <div class="comment">Comment: <%= review.comment %></div>
            <hr>
          </div>
        <% }); %>
      <% } else { %>
        <p>No reviews yet.</p>
      <% } %>
    </div>
  </div>

</body>
</html>
